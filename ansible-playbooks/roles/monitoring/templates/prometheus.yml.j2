# prometheus.yml.j2 - Prometheus Configuration

global:
  scrape_interval: 15s
  evaluation_interval: 15s
  external_labels:
    monitor: 'healthcare-app-monitor'
    environment: '{{ app_env | default("dev") }}'

alerting:
  alertmanagers:
    - static_configs:
        - targets: []

# Load alert rules
rule_files:
  - "alerts.yml"

scrape_configs:
  # 1. Prometheus self-monitoring
  - job_name: 'prometheus'
    static_configs:
      - targets: ['localhost:9090']
        labels:
          service: 'prometheus'

  # 2. Node Exporter
  - job_name: 'node-exporter'
    static_configs:
      - targets: ['node-exporter:9100']
        labels:
          service: 'node-exporter'
          instance: '{{ ansible_hostname }}'

  # 3. cAdvisor
  - job_name: 'cadvisor'
    static_configs:
      - targets: ['cadvisor:8080']
        labels:
          service: 'cadvisor'

  # 4. MySQL Exporter
  - job_name: 'mysql'
    static_configs:
      - targets: ['mysql-exporter:9104']
        labels:
          service: 'mysql'

  # 5. Nginx Exporter
  - job_name: 'nginx'
    static_configs:
      - targets: ['nginx-exporter:9113']
        labels:
          service: 'nginx'

  # 6. Laravel Application
  - job_name: 'laravel-app'
    metrics_path: '/metrics'
    static_configs:
      - targets: ['{{ ansible_host }}:{{ app_port }}']
        labels:
          service: 'laravel-application'
          env: '{{ app_env | default("dev") }}'

  # 7. Node Filesystem metrics (Disk)
  - job_name: 'node-filesystem'
    metrics_path: '/metrics'
    static_configs:
      - targets: ['node-exporter:9100']
        labels:
          service: 'node-filesystem'
          instance: '{{ ansible_hostname }}'

  # 8. Node Network metrics
  - job_name: 'node-network'
    metrics_path: '/metrics'
    static_configs:
      - targets: ['node-exporter:9100']
        labels:
          service: 'node-network'
          instance: '{{ ansible_hostname }}'

  # 9. Docker Containers metrics via cAdvisor
  - job_name: 'docker-containers'
    metrics_path: '/metrics'
    static_configs:
      - targets: ['cadvisor:8080']
        labels:
          service: 'docker-containers'

  # 10. Custom App metrics (example API)
  - job_name: 'custom-app'
    metrics_path: '/metrics'
    static_configs:
      - targets: ['{{ ansible_host }}:{{ app_port }}']
        labels:
          service: 'custom-application'
          env: '{{ app_env | default("dev") }}'
